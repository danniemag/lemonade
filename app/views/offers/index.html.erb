<p id="notice"><%= notice %></p>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>

<h1>Offers</h1>

<table>
  <thead>
    <tr>
      <th>Advertiser name</th>
      <th>Url</th>
      <th>Description</th>
      <th>Starts at</th>
      <th>Ends at</th>
      <th>Premium</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.advertiser_name %></td>
        <td><%= offer.url %></td>
        <td><%= offer.description %></td>
        <td><%= offer.starts_at %></td>
        <td><%= offer.ends_at %></td>
        <td><%= offer.premium.to_s.capitalize %></td>
        <td><%= offer.offer_state.upcase %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
        <% if offer.disabled? %>
          <td>
            <%= link_to 'Enable', offer_enable_please_path(offer.id), method: :put %>
          </td>
        <% elsif offer.enabled? %>
            <td>
              <%= link_to 'Disable', offer_disable_please_path(offer.id), method: :put %>
            </td>
        <% end %>
        <td><%= link_to 'Destroy', offer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Offer', new_offer_path %>
